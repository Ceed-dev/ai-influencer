{
  "name": "ai-influencer",
  "version": "3.0.0",
  "description": "AI Influencer - automated content pipeline for YouTube Shorts, TikTok, and Instagram Reels",
  "scripts": {
    "pipeline": "node scripts/run-pipeline.js",
    "daily": "node scripts/run-daily.js",
    "metrics": "node scripts/collect-metrics.js",
    "test": "jest",
    "test:gas": "jest --testPathPattern=gas/tests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@fal-ai/client": "^1.2.0",
    "dotenv": "^16.4.0",
    "googleapis": "^144.0.0"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "jest": {
    "projects": [
      {
        "displayName": "gas",
        "testEnvironment": "node",
        "setupFilesAfterEnv": ["<rootDir>/gas/tests/setup.js"],
        "testMatch": ["**/gas/tests/**/*.test.js"]
      },
      {
        "displayName": "pipeline",
        "testEnvironment": "node",
        "testMatch": ["**/tests/pipeline.test.js"]
      }
    ],
    "verbose": true
  }
}
