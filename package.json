{
  "name": "ai-influencer",
  "version": "3.0.0",
  "description": "AI Influencer - automated content pipeline for YouTube Shorts, TikTok, and Instagram Reels",
  "scripts": {
    "pipeline": "node scripts/run-pipeline.js",
    "daily": "node scripts/run-daily.js",
    "metrics": "node scripts/collect-metrics.js",
    "test": "jest",
    "test:gas": "jest --testPathPattern=gas/tests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "x:setup": "node scripts/x-oauth-setup.js",
    "x:post": "node scripts/watch-posting.js",
    "yt:setup": "node scripts/yt-oauth-setup.js",
    "yt:post": "node scripts/watch-yt-posting.js",
    "tiktok:setup": "node scripts/tiktok-oauth-setup.js",
    "tiktok:post": "node scripts/watch-tiktok-posting.js",
    "ig:setup": "node scripts/ig-oauth-setup.js",
    "ig:post": "node scripts/watch-ig-posting.js",
    "digest": "node scripts/generate-digest.js"
  },
  "dependencies": {
    "@fal-ai/client": "^1.2.0",
    "@slack/web-api": "^7.14.1",
    "dotenv": "^16.4.0",
    "googleapis": "^144.0.0",
    "openai": "^4.104.0",
    "twitter-api-v2": "^1.29.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "typescript": "^5.9.3"
  },
  "jest": {
    "projects": [
      {
        "displayName": "gas",
        "testEnvironment": "node",
        "setupFilesAfterEnv": [
          "<rootDir>/gas/tests/setup.js"
        ],
        "testMatch": [
          "**/gas/tests/**/*.test.js"
        ]
      },
      {
        "displayName": "pipeline",
        "testEnvironment": "node",
        "testMatch": [
          "**/tests/pipeline.test.js"
        ]
      },
      {
        "displayName": "digest",
        "testEnvironment": "node",
        "testMatch": [
          "**/tests/digest.test.js"
        ]
      }
    ],
    "verbose": true
  }
}
